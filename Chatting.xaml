<Page x:Class="talktalk.Chatting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:talktalk"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="450
"
      Title="Chatting">

    <Grid>
        <Grid>
            <TextBox x:Name="txtbox_chat" HorizontalAlignment="Center" Height="482" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="406" Background="#FFF3F5F4" IsReadOnly="True" />
            <TextBox x:Name="txtbox_send" HorizontalAlignment="Center" Height="28" Margin="0,507,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="406" KeyUp="txtbox_send_KeyUp"  />
            <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="511,10,-511,-10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>
    </Grid>
</Page>
